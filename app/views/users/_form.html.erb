<%= form_with model: @user, local: true do |form| %>
<%= render 'shared/errors', resource: @user %>

  <p>
    <%= form.label :username %>
    <%= form.text_field :username, id: :username %>
  </p>

  <p>
    <%= form.label :email %>
    <%= form.text_field :email, id: :email %>
  </p>

  <p>
    <%= form.label :password %>
    <%= form.password_field :password, id: :user_password %>
  </p>

  <p>
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation, id: :user_password_confirmation %>
  </p>

  <p><%= form.submit %></p>

<% end %>
